@model IEnumerable<TodoList.Data.Models.TodoItem>

<h1>TodoList</h1>
<ul>
    <li>Todo List</li>

    @if(Model?.Count()==0){
          <h1>No data found</h1>
    }
    else
    {
        <ul>
            @foreach(var item in Model)
            {
            <li>
                <input type="checkbox"/>
                @item.Description
                <a onclick="return window.confirm('Are you sure to delete this record?')"  asp-controller="todo" asp-action="deletetodo" asp-route-id="@item.Id">X</a>
            </li>
            }
        </ul>
    }
</ul>
@if(TempData["msg"]!=null)
{
    <span>@TempData["msg"]</span>
}
<form asp-action="Index">
    <input type="text" name="Description">
    <button>Add</button>
</form>